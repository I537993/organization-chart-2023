<mvc:View
  controllerName="com.sap.robby.orgchart.controller.Admin"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
>
  <Page id="page" title="{i18n>title}" enableScrolling="true">
    <headerContent>
      <Button text="onnavBack" press="onNavBack" />
    </headerContent>
    <content>
      <Table id="adminTable" alternateRowColors="true" items="{path : '/Us'}">
        <headerToolbar>
          <Toolbar>
            <Title level="H2" text="Administration"></Title>
            <ToolbarSpacer></ToolbarSpacer>
            <Button icon="sap-icon://add" press="onAdd"></Button>
            <Button icon="sap-icon://sort"></Button
            ><Button icon="sap-icon://filter"></Button
            ><Button icon="sap-icon://action-settings"></Button>
          </Toolbar>
        </headerToolbar>
        <infoToolbar />
        <columns>
          <Column>
            <Text text="Name" />
          </Column>
          <Column>
            <Text text="Title" />
          </Column>
          <Column>
            <Text text="Email" />
          </Column>
          <Column>
            <Text text="Manager" />
          </Column>
          <Column>
            <Text text="Phone" />
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Input value="{firstname} {lastname}" />
              <Input value="{title}" />
              <Input value="{email}" />
              <Input value="manager's name" />
              <Input value="{phone}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    <footer>
      <Bar design="Footer">
        <contentMiddle>
          <Button
            icon="sap-icon://sap-logo-shape"
            type="Transparent"
            text="SAP"
          />
        </contentMiddle>
        <contentRight>
          <Button text="Save" press=".onSave"></Button> </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>
