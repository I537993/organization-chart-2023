<mvc:View
  controllerName="com.sap.robby.orgchart.controller.Admin"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
>
  <Page id="page" title="{i18n>title}" enableScrolling="true">
    <headerContent>
      <Button text="onnavBack" press="onNavBack" />
    </headerContent>
    <content>
      <Table alternateRowColors="true" items="{path : '/Us'}">
        <headerToolbar />
        <infoToolbar />
        <columns>
          <Column>
            <Text text="Name" />
          </Column>
          <Column>
            <Text text="Title" />
          </Column>
          <Column>
            <Text text="Email" />
          </Column>
          <Column>
            <Text text="Manager" />
          </Column>
          <Column>
            <Text text="Phone" />
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <Text text="{firstname} {lastname}" />
          </ColumnListItem>
          <ColumnListItem>
            <Text text="{title}" />
          </ColumnListItem>
        </items>
      </Table>
    </content>
    <footer>
      <Bar design="Footer">
        <contentMiddle>
          <Button
            icon="sap-icon://sap-logo-shape"
            type="Transparent"
            text="SAP"
          />
        </contentMiddle>
      </Bar>
    </footer>
  </Page>
</mvc:View>
