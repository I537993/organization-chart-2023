<mvc:View
	controllerName="com.sap.robby.orgchart.controller.Card"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
            <QuickViewCard
                id="quickViewCard"
                navigate=".onNavigate"
                afterNavigate=".onAfterNavigate">
                <QuickViewPage
                    pageId="{pageId}"
                    header="header"
                    title="Robby Manis"
                    titleUrl="{titleUrl}"
                    description="CoE NA Cloud Technology">
                    <avatar>
                        <Avatar
                            src="{icon}"
                            displayShape="{displayShape}"
                        />
                    </avatar>
                </QuickViewPage>
            </QuickViewCard>
</mvc:View>