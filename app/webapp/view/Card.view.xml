<mvc:View
  controllerName="com.sap.robby.orgchart.controller.Card"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:r="com.sap.robby.orgchart.controls"
>
  <r:QuickViewCardPlus
    hover='.onHover'
    click='.onClick'
    press='.onClick'
    id='quickViewCard'
    pages="{path: '/Us', templateShareable: true}"
    navigate=".navigate"
    afterNavigate='.afterNavigate'
  >
    <QuickViewPage
      pageId="{ID}"
      header="header"
      title="{firstname} {lastname}"
      description="{company}"
    >
      <avatar>
        <Avatar src='{picture}' />
      </avatar>
      <QuickViewGroup heading='Contact'>
        <QuickViewGroupElement type='email' label='email' value='email' />
      </QuickViewGroup>
      <QuickViewGroup
        elements="{path: 'members', templateShareable: false}"
        heading='Team Leads'
      >
        <QuickViewGroupElement
          type='pageLink'
          pageLinkId='{ID}'
          label='{company}'
          value='{firstname} {lastname}'
        />
      </QuickViewGroup>
    </QuickViewPage>
    <r:content>
      <Button />
    </r:content>
  </r:QuickViewCardPlus>
</mvc:View>
