<mvc:View
	controllerName="com.sap.robby.orgchart.controller.Card"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
            <QuickViewCard
                navigate=".onNavigate"
                afterNavigate=".onAfterNavigate">
                <QuickViewPage
                    pageId="{ID}"
                    header="header"
                    title="{firstname} {lastname}"
                    titleUrl=""
                    description="Cloud Technology">
                    <avatar>
                        <Avatar
                        />
                    </avatar>
                    <QuickViewGroup elements='{members}' heading='Team Leads'>
                        <QuickViewGroupElement label='Business Technology Platform' value='{firstname} {lastname}'/>
                    </QuickViewGroup>
                </QuickViewPage>
            </QuickViewCard>
</mvc:View>