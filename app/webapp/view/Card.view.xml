<mvc:View
  controllerName="com.sap.robby.orgchart.controller.Card"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:r="com.sap.robby.orgchart.controls"
>
  <r:QuickViewCardPlus
    hover='.onHover'
    click='.onClick'
    press='.onClick'
    id='quickViewCard'
    pages="{path: '/Us', templateShareable: true}"
    afterNavigate='.afterNavigate'
  >
    <QuickViewPage
      pageId="{ID}"
      header="header"
      title="{firstname} {lastname}"
      description="{company}"
    >
      <customData>
        <core:CustomData key='manager_ID' value='{manager_ID}' />
      </customData>
      <avatar>
        <Avatar />
      </avatar>
      <QuickViewGroup
        elements="{path: 'members', templateShareable: true}"
        heading='Contact'
      >
        <QuickViewGroupElement type='email' label='email' value='email' />
      </QuickViewGroup>
      <QuickViewGroup
        visible="true"
        elements="{path: 'members', templateShareable: true}"
        heading='Team Leads'
      >
        <QuickViewGroupElement
          type='pageLink'
          pageLinkId='{ID}'
          label='{company}'
          value='{firstname} {lastname}'
        />
      </QuickViewGroup>
    </QuickViewPage>
  </r:QuickViewCardPlus>
</mvc:View>
